<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myapplication.day34.DetailsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

   <ImageView
       android:src="@mipmap/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="match_parent" />
        <TextView
            android:text="广州派"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"/>
        <ImageButton
            android:id="@+id/toolbar_share"
            android:layout_weight="1"
          android:src="@drawable/contentshare"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/toolbar_collect"
            android:layout_weight="1"
            android:src="@drawable/collectcontent"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>


 <TextView
     android:id="@+id/detail_title_tv"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="广州的天气好的哈哈哈"
     />
    <TextView
        android:id="@+id/detail_keyword_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天尖沙嘴发生抢劫事件"
        />
    <TextView
        android:id="@+id/detail_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="香港海关今天就是个傻逼"
        />
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/detail_tv"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="哈哈哈"
             />
     </ScrollView>
</LinearLayout>
